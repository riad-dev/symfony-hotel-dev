{% extends 'layout.html.twig' %}

{% block content %}
	<div class="container" style="width:50%">
		<h3>Les derniers commentaires de nos clients</h3>
			<div class="container">
					<table class="table-bordered 5px">
						<tr>
							<td>Note</td>
							<td>Commentaire</td>
						</tr>
							{% for comment in comments %}
						<tr>
		    				<td>{{ comment.note }}</td>
							<td>{{ comment.content }}</td>
						</tr>
							{% endfor %}
					</table>
			</div>
	</div>
{% endblock %}
