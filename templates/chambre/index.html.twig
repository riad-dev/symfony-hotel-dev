{% extends 'layout.html.twig' %}

{% block content %}
{% if chambres %}
    <div class="row">

        {% for chambre in chambres %}

            <div class="col-md-3 pull-right thumbnail text-center">
                <img src="{{ asset('img/' ~chambre.image) }}" alt="chambre bootstrap" class="img-responsive">
                <div class="caption">
                    <h3><a href="{{ path('app_chambre_index', {id:chambre.id_chambre}) }}">{{ chambre.nom }}</a></h3>
                </div>
            </div>
        {% endfor %}
    </div>

{% endif %}
{% endblock %}
